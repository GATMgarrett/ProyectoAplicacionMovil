<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/btnAtras"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:padding="0dp"
            android:background="@color/colorPrimary"
            android:src="@drawable/ic_toobal_atras"
            android:tint="#FFFFFF"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_marginStart="15dp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="55dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/url"
                android:layout_width="128dp"
                android:layout_height="101dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#0E0E0F"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="#FAFAFA"
                android:textColorHint="#D6C7C7"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#0E0E0F"
                android:hint="Password"
                android:inputType="textEmailAddress"
                android:textColor="#FAFAFA"
                android:textColorHint="#D6C7C7"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="269dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="ingresar"
            android:textColor="#F8F7F7"
            android:textSize="14dp"
            app:backgroundTint="#B36C0D" />


        <TextView
            android:id="@+id/txtRegistroLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="No tiene cuenta.? Registrate"
            android:textColor="#FAFAFA"
            android:textSize="15dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/btnCerrarAplicacion"
            android:layout_width="169dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_marginTop="100dp"
            android:paddingLeft="19dp"
            android:text="Salir"
            android:textColor="#070707"
            android:textSize="12dp"
            app:backgroundTint="#F44336" />
    </LinearLayout>


</RelativeLayout>