<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    android:layout_gravity="center"
    tools:context=".BFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="35dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/url"
                android:layout_width="120dp"
                android:layout_height="101dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_launcher"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#0E0E0F"
                android:hint="Correo"
                android:inputType="textEmailAddress"
                android:textColor="#FAFAFA"
                android:textColorHint="#D6C7C7"
                android:textSize="18dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp">

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="#0E0E0F"
                android:hint="Nombre"
                android:inputType="textEmailAddress"
                android:textColor="#FAFAFA"
                android:textColorHint="#D6C7C7"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="269dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:text="@string/btnRegistrarse"
            android:textColor="#F8F7F7"
            android:textSize="14dp"
            android:background="#DF6D15"/>

        <TextView
            android:background="#5BFFFFFF"
            android:textColor="#000000"
            android:id="@+id/txtGuardarCorreo"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:background="#5BFFFFFF"
            android:textColor="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/txtGuardarNombre"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            />
    </LinearLayout>

</FrameLayout>